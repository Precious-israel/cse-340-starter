
</head>
<body>
  <div id="wrapper">
    <main>
      <div class="edit-review-container">
        <h1><%= title %></h1>

        <!-- Flash messages -->
        <% if (messages().notice && messages().notice.length > 0) { %>
          <div class="success-message">
            <% messages().notice.forEach(msg => { %>
              <p><%= msg %></p>
            <% }) %>
          </div>
        <% } %>

        <!-- Vehicle Information -->
        <div class="review-vehicle-info">
          <h3>Vehicle: <%= review.inv_year %> <%= review.inv_make %> <%= review.inv_model %></h3>
          <p>Original review date: <%= new Date(review.review_date).toLocaleDateString() %></p>
        </div>

        <!-- Edit Review Form -->
        <form action="/review/update/<%= review.review_id %>" method="post" class="review-form">
          <div class="form-group">
            <label for="screen_name">Screen Name:</label>
            <input 
              type="text" 
              id="screen_name" 
              value="<%= review.account_firstname.charAt(0) %>. <%= review.account_lastname %>" 
              readonly 
              class="readonly-field"
            >
          </div>

          <div class="form-group">
            <label for="review_text">Your Review:</label>
            <textarea 
              id="review_text" 
              name="review_text" 
              required 
              maxlength="1000"
              placeholder="Share your thoughts about this vehicle..."
            ><%= review.review_text %></textarea>
            <div class="char-count">
              <span id="charCount"><%= review.review_text.length %></span> / 1000 characters
            </div>
          </div>

          <!-- Validation Errors -->
          <% if (errors && errors.length > 0) { %>
            <div class="error-list">
              <ul>
                <% errors.forEach(error => { %>
                  <li><%= error.msg %></li>
                <% }) %>
              </ul>
            </div>
          <% } %>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Review</button>
            <a href="/account/" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </main>
  </div>

  <script>
    // Character count for review text
    const reviewText = document.getElementById('review_text');
    const charCount = document.getElementById('charCount');
    
    if (reviewText && charCount) {
      reviewText.addEventListener('input', function() {
        charCount.textContent = this.value.length;
        
        // Add warning color when approaching limit
        if (this.value.length > 900) {
          charCount.style.color = '#dc3545';
        } else if (this.value.length > 800) {
          charCount.style.color = '#ffc107';
        } else {
          charCount.style.color = '#6c757d';
        }
      });
    }
  </script>
</body>
</html>