<main>
  <h1>Add New Vehicle</h1>

  <!-- Flash messages -->
  <section id="messages">
    <%- messages() %>
  </section>

  <form id="addInventoryForm" action="/inv/add-inventory" method="post">

    <!-- Classification Dropdown -->
    <label for="classificationList">Classification:</label>
    <%- classificationList %>

    <!-- Make -->
    <label for="inv_make">Make:</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      required
      maxlength="30"
      pattern="^[a-zA-Z0-9 ]+$"
      title="Only letters, numbers, and spaces"
      value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>"
    />

    <!-- Model -->
    <label for="inv_model">Model:</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      required
      maxlength="30"
      pattern="^[a-zA-Z0-9 ]+$"
      title="Only letters, numbers, and spaces"
      value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>"
    />

    <!-- Description -->
    <label for="inv_description">Description:</label>
    <textarea
      id="inv_description"
      name="inv_description"
      required
      maxlength="500"
    ><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>

    <!-- Image -->
    <label for="inv_image">Image Path:</label>
    <input
      type="text"
      id="inv_image"
      name="inv_image"
      required
      value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>"
    />

    <!-- Thumbnail -->
    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input
      type="text"
      id="inv_thumbnail"
      name="inv_thumbnail"
      required
      value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>"
    />

    <!-- Price -->
    <label for="inv_price">Price:</label>
    <input
      type="number"
      id="inv_price"
      name="inv_price"
      required
      min="0"
      step="0.01"
      value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>"
    />

    <!-- Year -->
    <label for="inv_year">Year:</label>
    <input
      type="number"
      id="inv_year"
      name="inv_year"
      required
      min="1900"
      max="2099"
      value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>"
    />

    <!-- Miles -->
    <label for="inv_miles">Miles:</label>
    <input
      type="number"
      id="inv_miles"
      name="inv_miles"
      required
      min="0"
      step="1"
      value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>"
    />

    <!-- Color -->
    <label for="inv_color">Color:</label>
    <input
      type="text"
      id="inv_color"
      name="inv_color"
      required
      maxlength="20"
      pattern="^[a-zA-Z ]+$"
      title="Only letters and spaces"
      value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>"
    />

    <button type="submit">Add Vehicle</button>
  </form>
</main>