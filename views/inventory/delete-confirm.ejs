
<body>
  <%- include("../partials/header") %>
  <h1><%= title %></h1>

  <p>Confirm Deletion - The delete is permanent.</p>

  <form method="post" action="/inv/delete">
    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= inv.inv_make %>" readonly>

    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= inv.inv_model %>" readonly>

    <label for="inv_year">Year</label>
    <input type="text" id="inv_year" name="inv_year" value="<%= inv.inv_year %>" readonly>

    <label for="inv_price">Price</label>
    <input type="text" id="inv_price" name="inv_price" value="<%= inv.inv_price %>" readonly>

    <!-- Hidden ID -->
    <input type="hidden" name="inv_id" value="<%= inv.inv_id %>">

    <button type="submit">Delete</button>
  </form>

</body>
</html>
