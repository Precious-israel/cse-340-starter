<main>
  <h1>Vehicle Management</h1>

  <!-- Flash messages section -->
  <section id="messages">
    <%- messages() %>
  </section>

  <!-- Navigation links for management actions -->
  <div class="management-actions">
    <a href="/inv/add-classification" class="btn btn-primary">
      <i class="fas fa-folder-plus"></i> Add New Classification
    </a>
    <a href="/inv/add-inventory" class="btn btn-primary">
      <i class="fas fa-car"></i> Add New Vehicle
    </a>
  </div>

  <!-- Inventory management section -->
  <div class="inventory-section">
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list to view and manage inventory items.</p>

    <!-- Dropdown list for classifications -->
    <div class="classification-filter">
      <form id="classificationForm">
        <label for="classification_id" class="filter-label">Choose a classification:</label>
        <select id="classification_id" name="classification_id" required>
          <%- classificationList %>
        </select>
      </form>
    </div>

    <!-- Table that will be filled dynamically by JavaScript -->
    <div id="inventoryDisplay">
      <div class="no-data">
        <i class="fas fa-car"></i>
        <h3>No Classification Selected</h3>
        <p>Please select a classification from the dropdown above to view inventory items.</p>
      </div>
    </div>

    <!-- Pagination controls -->
    <div id="paginationControls"></div>
  </div>
</main>

<!-- Link to the external CSS file -->
<link rel="stylesheet" href="/css/inventory-management.css">

<!-- Link to the external JavaScript file -->
<script src="/js/inventory.js" defer></script>

<!-- Font Awesome for icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>