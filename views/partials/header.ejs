<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (loggedin) { %>
      <!-- Welcome link for logged-in users -->
      <a href="/account/">Welcome <%= account_firstname %></a>
      <!-- Logout link -->
      <a href="/account/logout">Logout</a>
    <% } else { %>
      <!-- Only visible when logged out -->
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>