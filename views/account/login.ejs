<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <style>
    .notice {
      color: red;
      list-style: none;
    }
    .password-rules {
      background-color: #f9f9f9;
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 15px;
      font-size: 0.9em;
    }
    .password-rules ul {
      margin: 0;
      padding-left: 20px;
    }
    #message {
      margin-bottom: 1em;
      color: #0077cc;
    }
  </style>
</head>
<body>

  <h1><%= title %></h1>

  <!-- Flash messages -->
  <% if (messages().notice && messages().notice.length > 0) { %>
    <div id="message">
      <% messages().notice.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <!-- Validation Errors -->
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Login Form -->
  <form id="loginForm" action="/account/login" method="post">

    <!-- Email -->
    <label for="loginEmail">Email:</label>
    <input 
      type="email" 
      name="account_email" 
      id="loginEmail" 
      required 
      value="<%= locals.account_email || '' %>">

    <!-- Password -->
    <label for="account_password">Password:</label>
    <input 
      type="password" 
      id="account_password" 
      name="account_password" 
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    >

    <!-- Password requirements -->
    <div class="password-rules">
      <p><strong>Password must:</strong></p>
      <ul>
        <li>Be at least 12 characters long</li>
        <li>Include at least 1 uppercase letter</li>
        <li>Include at least 1 number</li>
        <li>Include at least 1 special character</li>
      </ul>
    </div>

    <!-- Toggle Password Visibility -->
    <label>
      <input type="checkbox" onclick="togglePassword()"> Show Password
    </label>

    <button type="submit">Login</button>
  </form>

  <!-- Registration Link -->
  <p>Don't have an account? <a href="/account/register">Create one</a></p>

  <!-- Scripts -->
  <script>
    function togglePassword() {
      const pwField = document.getElementById("account_password");
      pwField.type = pwField.type === "password" ? "text" : "password";
    }
  </script>

</body>
</html>
