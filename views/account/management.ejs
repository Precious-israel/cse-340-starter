<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: 'Account Management'}) %>
</head>
<body>
    <%- include('../partials/header') %>
    
    <main>
        <div class="container">
            <!-- <%- include('../partials/messages') %> -->
            
            <h1>Account Management</h1>
            
            <% if (accountData) { %>
                <h2>Welcome <%= accountData.account_firstname %></h2>
                
                <!-- Update Account Link -->
                <div class="mb-3">
                    <a href="/account/update/<%= accountData.account_id %>" class="btn btn-primary">
                        Update Account Information
                    </a>
                </div>
                
                <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
                    <h3>Inventory Management</h3>
                    <p>
                        <a href="/inv" class="btn btn-secondary">Manage Inventory</a>
                    </p>
                <% } %>
            <% } %>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>
